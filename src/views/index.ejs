<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/Data.js"></script>
    <title><%= title %></title>
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- HEADER / NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="<%= logo %>" width="40" class="rounded-pill">MySite
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto" id="menuList">
                        <% menu.forEach(item => { %>
                            <li class="nav-item">
                                <a class="nav-link" data-category="<%= item.category %>"><%= item.name %></a>
                            </li>
                        <% }) %>
                    </ul>

                    <!-- SEARCH -->
                    <div class="position-relative">
                        <input class="form-control" id="searchInput" placeholder="Поиск...">
                        <div id="autocomplete" class="list-group position-absolute w-100"></div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-grow-1">
        <div class="container py-5">
            <h1 class="mb-4"><%= mainTitle %></h1>
            <p><%= mainContent %></p>
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center py-3">
        <div class="container">
            <small>© <%= year %> MySite.</small>
        </div>
    </footer>

</body>
</html>