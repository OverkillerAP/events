<%- include('partials/header') %>

    <main class="container py-5">
        <h1 class="mb-4">–°–æ–±—ã—Ç–∏—è</h1>

        
        <h5>–ö–∞—Ç–µ–≥–æ—Ä–∏—è</h5>
        <% menu.forEach(tag=> { if (tag._id !== 'all') { %>
            <div class="form-check">
                <input class="form-check-input filter-checkbox" type="checkbox" value="<%= tag._id %>" <%=selectedTags
                    && selectedTags.includes(tag._id) ? 'checked' : '' %>
                >
                <label class="form-check-label">
                    <%= tag.name %>
                </label>
            </div>
            <% } }) %>

                <hr>

                <input type="date" id="filter-date" class="form-control" value="<%= selectedDate || '' %>">

                <button id="apply-filters" class="btn btn-dark mt-3 w-100">–ü—Ä–∏–º–µ–Ω–∏—Ç—å</button>

                <div class="row g-4" id="events">
                    <% if (!events || events.length===0) { %>
                        <p class="text-muted">–°–æ–±—ã—Ç–∏–π –Ω–µ—Ç</p>
                        <% } %>
                            <% events.forEach(event=> { %>
                                <div class="col-md-4">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-body">
                                            <% if (event.image) { %>
                                                <img src="<%= event.image %>" alt="<%= event.title %>"
                                                    class="img-fluid mb-4 mx-auto d-block">
                                                <% } %>

                                                    <% if (event.tags && event.tags.length) { %>
                                                        <% event.tags.forEach(tag=> { %>
                                                            <span class="badge bg-dark me-1 mb-2">
                                                                <%= (typeof tag==='object' ) ? (tag.name || tag._id) :
                                                                    tag %>
                                                            </span>
                                                            <% }) %>
                                                                <% } %>

                                                                    <h5 class="card-title">
                                                                        <%= event.title %>
                                                                    </h5>
                                                                    <p class="mb-1">üìç <%= event.location %>
                                                                    </p>
                                                                    <p class="mb-0">üìÖ <%= event.date %>
                                                                    </p>
                                                                    <a href="/event/<%= event._id %>"
                                                                        class="btn btn-primary mt-2">–ü–æ–¥—Ä–æ–±–Ω–µ–µ</a>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                </div>
    </main>
    <%- include('partials/footer') %>
    
